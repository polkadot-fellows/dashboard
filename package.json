{
  "name": "polkadot-fellows-dashboard",
  "private": "false",
  "version": "0.1.0",
  "contributors": [
    "Nikolaos Kontakis<wirednkod@gmail.com>"
  ],
  "description": "A dashboard about Polkadot Technical Fellowship and everything around it",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "postinstall": "papi",
    "build:pages": "tsc && vite build --base '/dashboard/'",
    "deploy:pages": "pnpm run build:pages && gh-pages -d build",
    "deploy": "gh-pages -d build --base '/dashboard/'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --check .",
    "lint:fix": "eslint . --ext ts,tsx --fix && prettier --write .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@mdx-js/react": "^3.0.1",
    "@mdx-js/rollup": "^3.0.1",
    "@polkadot-api/descriptors": "^0.0.1",
    "@polkadot-ui/core": "0.0.1-alpha.2",
    "@polkadot-ui/react": "0.0.1-alpha.5",
    "@polkadot-ui/utils": "0.0.1-alpha.5",
    "antd": "^5.19.0",
    "buffer": "^6.0.3",
    "copy-to-clipboard": "^3.3.3",
    "polkadot-api": "^0.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1",
    "react-loader-spinner": "^6.1.6",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.24.1",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.25",
    "@types/react-helmet": "^6.1.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "gh-pages": "^6.1.1",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "sass": "^1.77.6",
    "typescript": "^5.5.3",
    "vite": "^5.3.2",
    "vite-bundle-visualizer": "^1.1.0",
    "vite-plugin-checker": "^0.7.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}